<% layout("layouts/boilerplate") %> 

<!-- <h3>All Listings</h3> -->
 <style>
  #filters {
    margin-top: 1rem;
    display: flex;
    flex-wrap: nowrap;     /* ✅ sab ek line me rahenge */
    gap: 2rem;
    align-items: center;
    overflow-x: auto;      /* ✅ screen chhoti hone par scroll hoga */
  }

  .filters {
    text-align: center;
    opacity: 0.7;
    min-width: 80px;
  }

  .filters:hover {
    opacity: 1;
    cursor: pointer;
  }

  .tax-info {
    display: none;
  }

  .filters i {
    font-size: 1.5rem;
  }
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
    
    
    align-items: center;
  }
</style>

<!-- ✅ SINGLE container -->
<div id="filters">

  <div class="filters">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>

  <div class="filters">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>

  <div class="filters">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic cities</p>
  </div>

  <div class="filters">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>

  <div class="filters">
    <div><i class="fa-regular fa-hospital"></i></div>
    <p>Castles</p>
  </div>

  <div class="filters">
    <div><i class="fa-solid fa-water-ladder"></i></div>
    <p>Amazing pools</p>
  </div>

  <div class="filters">
    <div><i class="fa-regular fa-chess-rook"></i></div>
    <p>Camping</p>
  </div>

  <div class="filters">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </div>

  <div class="filters">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>
<div class="tax-toggle">
  <div class="form-check-reverse-form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
</div>
</div>

</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% allListings.forEach(listing => { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
        <div class="card h-100 listing-card">
          <img src="<%= listing.image.url %>" 
               class="card-img-top" 
               alt="Listing Image" 
               style="height: 20rem; object-fit: cover;" 
               onerror="this.onerror=null;this.src='https://via.placeholder.com/400x300?text=No+Image';">
          <div class="card-body">
            <p class="card-text mb-0">
              <b><%= listing.title %></b><br/>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
              <i class="tax-info"> &nbsp;  &nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% }) %>
</div>
<script>
   let taxSwitch = document.getElementById("switchCheckDefault");

   taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");

      for (let info of taxInfo) {

         if (taxSwitch.checked) {
            info.style.display = "inline";
         } else {
            info.style.display = "none";
         }

      }
   });
</script>
